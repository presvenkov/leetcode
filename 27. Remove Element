class Solution {
    public int removeElement(int[] nums, int val) {
        int positionOfLastEligible = 0;
        
        for (int i = 0; i < nums.length; i++) {
            if (nums[i] != val) {
                nums[positionOfLastEligible] = nums[i];
                positionOfLastEligible++;
            }
        }
        
        return positionOfLastEligible;
    }
}
